const jwt = require('jsonwebtoken')
const User = require('../models/user')
require('mongoose')

const authrole = (rolearray) => (req,res,next) => {
    console.log(req.user.userType) 
            if(!req.user){
                return res.status(404).send('No user please authrized')
            }
             let authrized = false;

            rolearray.forEach(role => {
                authrized = req.user.userType === role;
                console.log(authrized)
            })
            console.log(authrized)
            if(authrized){
                return next()
            }
            return res.status(401).send('Not Allowd')
}

module.exports = authrole

